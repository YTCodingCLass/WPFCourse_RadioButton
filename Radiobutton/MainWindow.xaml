<Window x:Class="Radiobutton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Radiobutton"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
	<StackPanel Margin="10">
		<Label >Choose your favorite Color:</Label>
		<RadioButton  Checked="ColorsRadioButton_Checked" GroupName="Colors" Content="Red"></RadioButton>
		<RadioButton Checked="ColorsRadioButton_Checked" GroupName="Colors" Content="Blue"></RadioButton>
		<RadioButton Checked="ColorsRadioButton_Checked" GroupName="Colors" Content="Yellow"></RadioButton>
		<Label>Choose your Gender:</Label>
		<RadioButton Checked="GenderRadioButton_Checked" GroupName="Gender" Content="Male"></RadioButton>
		<RadioButton Checked="GenderRadioButton_Checked" GroupName="Gender" Content="Female"></RadioButton>
		<Button Click="Button_Click">OK</Button>
	</StackPanel>
</Window>
